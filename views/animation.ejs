<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Connect</title>
    <link rel="icon" href="https://qph.cf2.quoracdn.net/main-qimg-c5f5739457afba5604fa49ec261d6303" type="image/x-icon">
    <style>
        /* Full-screen video styling */
        body {
            height: 100%;
            overflow: hidden;
            background-color: black;
        }

        #video-background {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 80%;
            width: auto;
            height: auto;
            z-index: -1;
            transform: translate(-50%, -50%);
            transition: opacity 1s ease; /* Add transition for fade effect */
        }

        /* Fade-out effect class */
        .fade-out {
            opacity: 0;
        }

        /* Hide main content initially */
        #main-content {
            display: none;
        }
        .hover-button {
            background-color: transparent; 
            border: 3px solid transparent;
            color: #000; 
            padding: 15px 30px; 
            font-size: 18px; 
            cursor: pointer;
            border-radius: 30px; 
            transition: all 0.3s ease; 
            font-weight: bold;
            position: absolute;
            left: 90%;
          }
          
          .hover-button:hover {
            background-color: #dfdfdf; 
            color: black; 
            border-color: black; 
            box-shadow: 5px 5px 10px black;
          }
          
          
          .hover-button:hover.alt {
            background-color: red;
            border-color: red; 
          }
          
    </style>
</head>
<body>
    <button class="hover-button">SKIP >></button>
    <!-- Full-Screen Video Section -->
    <video id="video-background" autoplay muted >
        <source src="videos/acvideo.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <script>
        let btn = document.querySelector("button");
        btn.addEventListener("click",()=>{
            window.location.href ="http://localhost:8080/signup";
        })
        // JavaScript to fade out the video and navigate to the next page after a delay
        setTimeout(function() {
            // Apply fade-out class to the video
            document.getElementById('video-background').classList.add('fade-out');
            
            // Delay the redirection to match the fade-out duration (1 second)
            setTimeout(function() {
                window.location.href = "http://localhost:8080/signup";
            }, 1000); // 1 second for fade-out
        }, 29000); // Wait for 6.5 seconds before fading out
    </script>

</body>
</html>
